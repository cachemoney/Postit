<%= render 'shared/content_lead', header: 'All Posts' %>

<div class="row">
	<div class='span0 well text-center'>
	
	</div>
	<div class='span8 well'>

		<h4><%= link_to post.title, fix_url(post) %></h4>
		<p>
			<%= post.description %>
		</p>
		<p>
			<span class="quiet">posted by</span> <%= link_to post.user.username, user_path(post.user) %>
			<!-- <small> at <%= display_datetime(post) %> </small> -->
		</p>
		<small>
			<span>
				<%= link_to("#{post.comments.size} comments", post_path(post)) %>
			</span>
		</small>
	</div>
</div>


