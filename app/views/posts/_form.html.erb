<%= form_for @post do |f| %>
<%= render 'shared/errors', obj: @post %>
	<div class='cotrol-group'>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class='cotrol-group'>
		<%= f.label :url, "URL" %>
		<%= f.text_field :url  %>
	</div>
	<div class='cotrol-group'>
		<%= f.label :description %>
		<%= f.text_area :description, rows: 5  %>
	</div>
	<%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: 'btn btn-primary') %>
	<% end %>