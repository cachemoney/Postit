<% show_post ||=false %>

<div class="row" >
	<div class="span0 well text-center comment_votes"> 
		<%= link_to "+", vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true %>
		<span id="comment_<%=comment.id%>_votes"> <%= comment.total_votes %> </span>
		<%= link_to "-", vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true %>
	</div>

	<div class="span8 well" >
		<em>"<%= comment.body %>"</em>
		<% if show_post %>
			on <%= link_to comment.post.title, post_path(comment.post) %>
		<% end %>
		<br />
		<span class='quiet'>by</span> <%= link_to comment.user.username, user_path(comment.user) %>
		<small>at <%= comment.created_at %></small>

	</div>
</div>